@model NZWalks.Web.UI.DTOs.RegionDto;

<h1 class="mt-3">Edit Region</h1>

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input class="form-control" type="text" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Code</label>
            <input class="form-control" type="text" asp-for="Code" />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input class="form-control" type="text" asp-for="RegionImageUrl" />
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <button class="btn btn-primary" type="submit">Save</button>
            <button class="btn btn-danger" asp-action="Delete" asp-controller="Region" type="submit">Delete</button>
        </div>
    </form>
}