<UserControl
    x:Class="DataTrigger.DisplayUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataTrigger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Canvas>
        <Slider
            x:Name="slider"
            Width="400"
            Height="50"
            Margin="50,300,1,0"
            Padding="5,45,5,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Maximum="1"
            Minimum="0"
            TickFrequency="0.5"
            Value="0" />

        <Button
            x:Name="NextPage"
            Canvas.Left="576"
            Canvas.Top="287"
            Width="75"
            Height="75"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="NextPage_Click"
            Content="Click Here"
            IsEnabled="{Binding ElementName=slider, Path=Value}">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="IsEnabled" Value="False" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=slider, Path=Value}" Value="1">
                                        <Setter Property="Background" Value="GreenYellow" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <Ellipse
                            Width="Auto"
                            Height="Auto"
                            Fill="Orange" />
                    </Grid>
                </ControlTemplate>
            </Button.Template>

            <!--  This is a button Data trigger working code which makes this button enable disable based on slider value  -->
            <!--<Button.Style>
                <Style TargetType="Button">
                    <Setter Property="IsEnabled" Value="False" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=slider, Path=Value}" Value="1">
                            <Setter Property="Background" Value="Yellow" />
                            <Setter Property="IsEnabled" Value="True" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>-->
        </Button>
    </Canvas>
</UserControl>
